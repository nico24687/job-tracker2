<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :class => "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, :class => "form-control" %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest, :class => "form-control" %>

  <%= f.label :city %>
  <%= f.text_field :city, :class => "form-control" %>


  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :title, {prompt: "Select a category"}, {class: "form-control"}   %>

  <%= link_to "New Category", new_category_path, :class => 'btn btn-xs btn-pill btn-primary ',  style: 'margin-top:10px;' %>

  <%= f.submit'Create Job ', :class => 'btn btn-sm btn-pill btn-success',style: 'float:right; margin-top: 40px;' %>
<% end %>
